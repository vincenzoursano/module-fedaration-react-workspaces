{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "es6", "dom", "es7"],
    "experimentalDecorators": true,
    "allowJs": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*"
  ]
}
